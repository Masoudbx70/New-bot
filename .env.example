# توکن ربات تلگرام (از @BotFather دریافت کنید)
BOT_TOKEN=your_bot_token_here

# آیدی عددی ادمین‌ها (با کاما جدا شوند)
ADMIN_IDS=123456789,987654321

# آیدی عددی گروه (می‌توانید از @RawDataBot دریافت کنید)
GROUP_ID=-1001234567890

# URL دیتابیس (در Railway به صورت خودکار تنظیم می‌شود)
DATABASE_URL=sqlite:///bot.db

# حداکثر تعداد پیام قبل از احراز هویت
MAX_MESSAGES_BEFORE_VERIFICATION=3

# مدت زمان مسدودیت موقت (ثانیه)
TEMPORARY_BAN_DURATION=3600